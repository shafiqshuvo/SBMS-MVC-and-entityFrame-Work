@using CompileError.Models
@model CompileError.Models.StockViewModel


@{
    /**/

    Layout = "~/Views/Shared/_KLayout.cshtml";
    ViewBag.Title = "Search Stock";

}

@section MyCSS
{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 6px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .input-validation-error {
            border: 1px solid red;
        }

        .field-validation-error {
            color: red;
        }

        .field-validation-valid {
            display: none;
        }
    </style>

    <h2>Stock Report</h2>
    @using (Html.BeginForm("Search", "Stock", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(c => c.ProductName)
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(c => c.ProductId, Model.PurchaseSelectListItems, "--Select--")
            </div>
            <div class="col-md-2">
                @Html.LabelFor(c => c.StartDateTime)
            </div>
            <div class="col-md-4">
                @Html.TextBox("startDate", null, htmlAttributes: new
           {
               @class = "form-control",
               @type = "date",
               @id = "startDate"
           })
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(c => c.CategoryName)
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(c => c.CategoryId, Model.CategorySelectListItems, "--Select--")
            </div>
            <div class="col-md-2">
                @Html.LabelFor(c => c.EndDateTime)
            </div>
            <div class="col-md-4">
                @Html.TextBox("endDate", null, htmlAttributes: new
           {
               @class = "form-control",
               @type = "date",
               @id = "endDate"
           })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Re-Order Lavel")
                @Html.CheckBox("reorderLevel", true)
            </div>
            <div class="col-md-3">
                @Html.Label("Expired")
                @Html.CheckBox("expired", false)
            </div>
            <div class="col-md-3">
                @Html.Label("Damaged")
                @Html.CheckBox("damaged", false)
            </div>
            <div class="col-md-3">
                @Html.Label("Lost")
                @Html.CheckBox("lost", false)
            </div>
        </div>



        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <input type="submit" value="Search" />
            </div>
        </div>


        @{Html.RenderPartial("~/Views/Shared/Stock/_StockPeriodicalDetails.cshtml", Model);

        }

            }





